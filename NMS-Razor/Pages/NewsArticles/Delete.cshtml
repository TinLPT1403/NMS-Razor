@page
@model Pages.NewsArticles.DeleteModel

@{
    ViewData["Title"] = "Delete News Article"; // More informative title
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Ensure consistent layout
}

<style>
    /* Styling for Delete Confirmation Page - Visually Clear and Emphasizing Danger */

    :root {
        --primary-color: #0056b3;
        --secondary-color: #6c757d;
        --background-color: #f8f9fa;
        --text-color: #343a40;
        --accent-color: #ffc107;
        --delete-card-background: #ffffff;
        --delete-card-border: #dee2e6;
        --delete-card-border-radius: 8px;
        --delete-warning-color: #dc3545; /* Danger/Warning color for delete messages */
        --meta-color: var(--secondary-color);
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        max-width: 800px; /* Adjust as needed */
        margin: 30px auto; /* More top margin to stand out */
        padding: 30px;
        background-color: var(--delete-card-background);
        border: 1px solid var(--delete-card-border);
        border-radius: var(--delete-card-border-radius);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Slightly stronger shadow */
        text-align: center; /* Center content within the container */
    }

    h1 {
        color: var(--delete-warning-color); /* Red title to highlight delete action */
        margin-bottom: 20px;
        font-size: 2.5em;
    }

    h3 {
        color: var(--text-color);
        margin-bottom: 20px;
        font-size: 1.4em;
        font-weight: normal; /* Keep it less bold than title */
    }

    .article-details {
        text-align: left; /* Align article details to the left within the container */
        margin-bottom: 30px;
    }

    .detail-row {
        display: flex;
        margin-bottom: 10px;
    }

    .detail-label {
        flex-basis: 25%; /* Adjust as needed for label width */
        font-weight: bold;
        color: var(--meta-color);
        padding-right: 10px;
        text-align: right; /* Align labels to the right */
    }

    .detail-value {
        flex-basis: 75%; /* Adjust as needed for value width */
        color: var(--text-color);
    }

    .delete-actions {
        margin-top: 30px;
        text-align: center; /* Center buttons */
    }

    .btn-danger {
        padding: 0.9rem 2rem; /* Larger delete button */
        font-size: 1.1rem;
        border-radius: 0.3rem;
        font-weight: bold;
    }

    .btn-secondary {
        padding: 0.8rem 1.8rem;
        font-size: 1rem;
        border-radius: 0.3rem;
    }

</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="delete-container">
    <h1><i class="fas fa-exclamation-triangle" style="color: var(--delete-warning-color);"></i> Delete News Article?</h1>

    <h3>Are you absolutely sure you want to delete this news article? This action cannot be undone.</h3>

    <div class="article-details">
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.NewsTitle)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.NewsTitle)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.Headline)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.Headline)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.CreatedDate)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.CreatedDate)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.NewsContent)</div>
            <div class="detail-value"><div style="overflow-wrap: break-word;">@Html.DisplayFor(model => model.Article.NewsContent)</div></div> @* Added overflow-wrap for long content *@
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.NewsSource)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.NewsSource)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.NewsStatus)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.NewsStatus)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.ModifiedDate)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.ModifiedDate)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">@Html.DisplayNameFor(model => model.Article.Category)</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Article.Category.CategoryDescription)</div>
        </div>
    </div>

    <div class="delete-actions">
        <form method="post">
            <input type="hidden" asp-for="Article.NewsArticleId" />
            <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel - Back to List</a>
        </form>
    </div>
</div>