@page
@model Pages.Categories.IndexModel

@{
    ViewData["Title"] = "News Categories"; // More descriptive title
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Styling for Category Index Page - Visual Card Layout */

    :root {
        --primary-color: #0056b3;
        --secondary-color: #6c757d;
        --background-color: #f8f9fa;
        --text-color: #343a40;
        --accent-color: #ffc107;
        --category-card-background: #ffffff;
        --category-card-border: #dee2e6;
        --category-card-border-radius: 8px;
        --category-card-padding: 20px;
        --category-card-margin-bottom: 20px;
        --category-action-color: var(--primary-color);
        --category-action-hover-color: darken(var(--category-action-color), 10%);
        --category-label-color: var(--secondary-color);
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: var(--primary-color);
        margin-bottom: 25px;
        text-align: center;
    }

    .categories-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive grid */
        gap: 25px;
        margin-top: 20px;
    }

    .category-card {
        background-color: var(--category-card-background);
        border: 1px solid var(--category-card-border);
        border-radius: var(--category-card-border-radius);
        padding: var(--category-card-padding);
        margin-bottom: var(--category-card-margin-bottom);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease-in-out; /* Hover effect */
    }

        .category-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

    .category-title {
        font-size: 1.5em;
        color: var(--primary-color);
        margin-bottom: 15px;
    }

    .category-detail {
        margin-bottom: 8px;
    }

    .category-label {
        font-weight: bold;
        color: var(--category-label-color);
        margin-right: 5px;
    }

    .category-actions {
        margin-top: 20px;
        text-align: right;
    }

        .category-actions a {
            color: var(--category-action-color);
            text-decoration: none;
            margin-left: 10px;
            padding: 8px 12px;
            border: 1px solid var(--category-action-color);
            border-radius: 5px;
            transition: background-color 0.2s ease, color 0.2s ease;
            display: inline-block; /* Ensure actions are on one line */
        }

            .category-actions a:hover {
                background-color: var(--category-action-color);
                color: white;
            }

    .create-new-link {
        display: block;
        text-align: center;
        margin-bottom: 30px;
    }

        .create-new-link a {
            display: inline-block;
            padding: 10px 20px;
            background-color: var(--primary-color);
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.2s ease;
        }

            .create-new-link a:hover {
                background-color: darken(var(--primary-color), 10%);
            }

    .is-active-indicator {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 0.9em;
        font-weight: bold;
        margin-left: 5px;
    }

    .is-active-true {
        background-color: #28a745; /* Green for active */
        color: white;
    }

    .is-active-false {
        background-color: #dc3545; /* Red for inactive */
        color: white;
    }

</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["NoResults"] != null)
{
    <div class="alert alert-warning">@TempData["NoResults"]</div>
}

<h1>News Categories</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p class="create-new-link">
    <!-- Trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
        Create New Category Popup
    </button>
</p>


<!-- Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="createCategoryModalLabel">Create New Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="create-category-form-container">
                    <h4>Category Details</h4>
                    <hr />

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Category.CategoryName" class="control-label">Category Name</label>
                            <input asp-for="Category.CategoryName" class="form-control" />
                            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category.CategoryDescription" class="control-label">Category Description</label>
                            <input asp-for="Category.CategoryDescription" class="form-control" />
                            <span asp-validation-for="Category.CategoryDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category.IsActive" class="control-label">Is Active</label>
                            <select asp-for="Category.IsActive" class="form-control">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                            <span asp-validation-for="Category.IsActive" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category.ParentCategoryId" class="control-label">Parent Category (Optional)</label>
                            <select asp-for="Category.ParentCategoryId" class="form-control">
                                <option value="">-- No Parent Category --</option>
                                @foreach (var item in Model.ParentCategoryList)
                                {
                                    <option value="@item.CategoryId">@item.CategoryName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create Category" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="editCategoryModalLabel">Edit Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="edit-category-form-container">
                    <h4>Edit Category Details</h4>
                    <hr />

                    <form method="post" asp-page-handler="EditCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden field for CategoryId -->
                        <input type="hidden" id="editCategoryId" name="CategoryId" />

                        <div class="form-group">
                            <label for="editCategoryName" class="control-label">Category Name</label>
                            <input id="editCategoryName" name="CategoryName" class="form-control" />
                            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="editCategoryDescription" class="control-label">Category Description</label>
                            <input id="editCategoryDescription" name="CategoryDescription" class="form-control" />
                            <span asp-validation-for="Category.CategoryDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="editIsActive" class="control-label">Is Active</label>
                            <select id="editIsActive" name="IsActive" class="form-control">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                            <span asp-validation-for="Category.IsActive" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="editParentCategoryId" class="control-label">Parent Category (Optional)</label>
                            <select id="editParentCategoryId" name="ParentCategoryId" class="form-control">
                                <option value="">-- No Parent Category --</option>
                                @foreach (var item in Model.ParentCategoryList)
                                {
                                    <option value="@item.CategoryId">@item.CategoryName</option>
                                }
                            </select>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function openEditModal(categoryId, categoryName, categoryDescription, isActive, parentCategoryId) {
            // Set the values in the edit modal form
            document.getElementById('editCategoryId').value = categoryId;
            document.getElementById('editCategoryName').value = categoryName;
            document.getElementById('editCategoryDescription').value = categoryDescription;
            document.getElementById('editIsActive').value = isActive;
            document.getElementById('editParentCategoryId').value = parentCategoryId || "";

            // Show the modal
            var editModal = new bootstrap.Modal(document.getElementById('editCategoryModal'));
            editModal.show();
        }
    </script>
}
<body>



<div class="categories-container">
    @foreach (var item in Model.Categories)
    {
        <div class="category-card">
            <h2 class="category-title">
                @Html.DisplayFor(modelItem => item.CategoryName)
                @if (item.IsActive == true)
                {
                    <span class="is-active-indicator is-active-true">Active</span>
                }
                else
                {
                    <span class="is-active-indicator is-active-false">Inactive</span>
                }
            </h2>

            <div class="category-detail">
                <span class="category-label">Description:</span>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </div>

            <div class="category-detail">
                <span class="category-label">Parent Category:</span>
                @Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)
            </div>


            <div class="category-actions">
                <a href="#" onclick="openEditModal('@item.CategoryId', '@item.CategoryName', '@item.CategoryDescription', '@item.IsActive', '@item.ParentCategoryId')">Edit</a>
                <a asp-page="/Categories/Details" asp-route-id="@item.CategoryId">Details</a>
                <a asp-page="/Categories/Delete" asp-route-id="@item.CategoryId">Delete</a>
            </div>
        </div>
    }
</div>

</body>